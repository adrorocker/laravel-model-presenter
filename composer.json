{
    "name": "adrosoftware/laravel-model-presenter",
    "description": "A simple and elegant way to separate presentation logic from Laravel Eloquent models",
    "keywords": ["laravel", "presenter", "model", "eloquent", "view", "presentation"],
    "license": "MIT",
    "authors": [
        {
            "name": "Adro Morelos",
            "email": "me@adro.rocks"
        }
    ],
    "require": {
        "php": "^8.4",
        "illuminate/contracts": "^11.0 || ^12.0",
        "illuminate/database": "^11.0 || ^12.0",
        "illuminate/support": "^11.0 || ^12.0",
        "nesbot/carbon": "^2.0 || ^3.0"
    },
    "require-dev": {
        "larastan/larastan": "^2.0 || ^3.0",
        "laravel/pint": "^1.0",
        "orchestra/testbench": "^9.0 || ^10.0",
        "pestphp/pest": "^2.0 || ^3.0",
        "phpstan/phpstan": "^1.0 || ^2.0"
    },
    "autoload": {
      "psr-4": {
        "AdroSoftware\\LaravelModelPresenter\\": "src/"
      }
    },
    "autoload-dev": {
        "psr-4": {
            "AdroSoftware\\LaravelModelPresenter\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "pest",
        "test:watch": "pest --watch",
        "lint": "pint --test --preset=per",
        "lint:fix": "pint --preset=per",
        "analyse": "phpstan analyse"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        },
       "sort-packages": true
    }
}
